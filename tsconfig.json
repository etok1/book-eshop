{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/profile/page.tsx",
    "src/app/cart/page.tsx",
    "src/app/components/home/slider/slider.jsx",
    "src/app/components/header/header.jsx",
    "src/app/components/bookList/BookList.jsx",
    "src/app/components/bookList/Card/Card.jsx",
    "src/app/api/books.js",
    "src/app/layout.tsx",
    "src/app/page.tsx"
  ],
  "exclude": ["node_modules"]
}
